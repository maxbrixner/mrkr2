{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch App",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--factory",
                "app:create_app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}